<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="ebankingPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.soen.ebanking.model.Account</class>
    <class>com.soen.ebanking.model.AccountTransaction</class>
    <class>com.soen.ebanking.model.Address</class>
    <class>com.soen.ebanking.model.ChequingAccount</class>
    <class>com.soen.ebanking.model.Client</class>
    <class>com.soen.ebanking.model.ClientCard</class>
    <class>com.soen.ebanking.model.ClosedTermInvestment</class>
    <class>com.soen.ebanking.model.CreditAccount</class>
    <class>com.soen.ebanking.model.CreditPlan</class>
    <class>com.soen.ebanking.model.Employee</class>
    <class>com.soen.ebanking.model.InvestmentAccount</class>
    <class>com.soen.ebanking.model.InvestmentPlan</class>
    <class>com.soen.ebanking.model.OpenTermInvestment</class>
    <class>com.soen.ebanking.model.Payee</class>
    <class>com.soen.ebanking.model.PayeeAccount</class>
    <class>com.soen.ebanking.model.Role</class>
    <class>com.soen.ebanking.model.SavingAccount</class>
    <class>com.soen.ebanking.model.User</class>
    <class>com.soen.ebanking.model.UserRole</class>
    <class>com.soen.ebanking.model.Admin</class>
    <class>com.soen.ebanking.model.EWallet</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.jdbc.password" value="1234"/>
      <property name="eclipselink.jdbc.user" value="root"/>
      <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/ebanking"/>
      <property name="eclipselink.logging.level" value="FINEST"/>
      <property name="eclipselink.cache.shared.default" value="false"/>
      <!-- 
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      -->
    </properties>
  </persistence-unit>
</persistence>
